{
  "expo": {
    "name": "Color Diary",
    "slug": "colordiary",
    "version": "1.0.0",
    "orientation": "portrait",

    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.renkgunlugu.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": [
          "background-processing"
        ],
        "NSUserNotificationsUsageDescription": "Notification permission is required for daily color selection reminders."
      }
    },
        "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.renkgunlugu.app",
      "versionCode": 1
    },
    "web": {
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#ffffff"
        }
      ],
      "expo-sqlite"
    ]
  }
}
